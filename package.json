{
  "name": "tomoprivacyjs",
  "version": "0.1.0",
  "description": "Privacy utils for tomochain crypto in javascript.",
  "homepage": "https://github.com/tomochain/privacyjs",
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tomochain/privacyjs"
  },
  "author": "anhnt@tomochain",
  "license": "MIT",
  "keywords": [
    "bitcoin",
    "steatlth",
    "addresses",
    "privacy"
  ],
  "main": "index.js",
  "jsnext:main": "index.es.js",
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb-base"
  },
  "dependencies": {
    "@babel/runtime": "^7.0.0",
    "aes-js": "^3.1.2",
    "bignumber.js": "^9.0.0",
    "bs58": "^2.0.1",
    "ecurve": "^1.0.1",
    "elliptic": "^6.5.1",
    "js-sha3": "^0.8.0",
    "truffle-hdwallet-provider": "^1.0.17",
    "web3": "^1.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chain": "^0.1.3",
    "coveralls": "^2.11.14",
    "del": "^2.2.2",
    "easystatic": "^0.1.12",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.2.0",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^6.0.0",
    "nyc": "^13.1.0",
    "rollup": "^0.67.3",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "sinon": "^7.1.1"
  },
  "scripts": {
    "lint": "eslint src",
    "test": "mocha --config './.mocharc.yaml' --recursive  --require @babel/register --exit",
    "test-case": "mocha --require @babel/register --exit -g ",
    "test:watch": "mocha --config './.mocharc.yaml' --recursive --require @babel/register --reporter min --watch",
    "test:cover": "nyc npm test",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "build": "node tools/build",
    "prepublish": "npm run build"
  }
}
